{
  "name": "account_status_la",
  "author": "WhitesLove",
  "type": "module",
  "version": "0.9.0",
  "description": "The application, created by WhitesLove for personal usage for save and check characters status in Lost Ark game. Do not re-upload on another places without my permission. All rights reserved.",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "chcp 65001 && npm run build && npm run electron",
    "dist": "electron-builder --win portable",
    "dev": "vite",
    "build": "vite build",
    "electron": "electron ."
  },
  "private": true,
  "dependencies": {
    "axios": "^1.8.4",
    "luxon": "^3.6.0",
    "node-cron": "^3.0.3",
    "node-html-parser": "^7.0.1",
    "node-schedule": "^2.1.1",
    "semver": "^7.7.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "sass": "^1.86.0",
    "vite": "^6.2.3",
    "vite-plugin-electron": "^0.29.0",
    "vue": "^3.5.13"
  },
  "build": {
    "appId": "com.example.yourapp",
    "productName": "Lost Ark Character Manager",
    "directories": {
      "output": "build-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "icon": "electron-builder/icon.ico",
      "target": "portable",
      "artifactName": "${productName}.exe"
    }
  }
}
