{
  "name": "accountstatusla",
  "author": "WhitesLove",
  "type": "module",
  "version": "2.2.1",
  "description": "Manage characters status in Lost Ark",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "chcp 65001 && npm run build && npm run electron",
    "dist": "electron-builder --win portable",
    "nsis": "electron-builder --win nsis",
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "release": "dotenv electron-builder --win nsis --publish always",
    "portable": "dotenv electron-builder --win portable --publish always"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "font-list": "^1.5.1",
    "html2canvas": "^1.4.1",
    "lodash": "^4.17.21",
    "luxon": "^3.6.0",
    "node-html-parser": "^7.0.1",
    "node-schedule": "^2.1.1",
    "semver": "^7.7.1",
    "vite-svg-loader": "^5.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "dotenv-cli": "^8.0.0",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "sass": "^1.89.0",
    "vite": "6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vue": "^3.5.14"
  },
  "build": {
    "appId": "com.whiteslove.accountstatusla",
    "productName": "Lost Ark Character Manager",
    "directories": {
      "output": "build-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "AmoneMisa",
        "repo": "accountStatusLA"
      }
    ],
    "win": {
      "icon": "electron-builder/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.exe"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
